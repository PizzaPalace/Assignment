<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.matrimony.training.assignment" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlanetInfoActivity"
            android:label="@string/title_activity_planet_info"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.matrimony.training.assignment.MainActivity" />
        </activity>
        <activity
            android:name=".SwipeImage"
            android:label="@string/title_activity_swipe_image"
            android:parentActivityName=".PlanetInfoActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.matrimony.training.assignment.PlanetInfoActivity" />
        </activity>
    </application>

</manifest>
